From: "Barak A. Pearlmutter" <barak+git@cs.nuim.ie>
Date: Mon, 4 Mar 2013 10:59:05 +0000
Subject: hardwire plugin directory

Set directory to scan for plugins subdirectory containing plugins to
system directory in which the plugins subdirectory is installed.
---
 MLDemos/pluginmanager.cpp | 2 +-
 MLScripting/main.cpp      | 2 +-
 2 files changed, 2 insertions(+), 2 deletions(-)

diff --git a/MLDemos/pluginmanager.cpp b/MLDemos/pluginmanager.cpp
index 778d6a8..d955eca 100644
--- a/MLDemos/pluginmanager.cpp
+++ b/MLDemos/pluginmanager.cpp
@@ -21,7 +21,7 @@ PluginManager::~PluginManager()
 void PluginManager::LoadPlugins()
 {
     qDebug() << "Importing plugins";
-    QDir pluginsDir = QDir(qApp->applicationDirPath());
+    QDir pluginsDir = QDir("/usr/lib/mldemos");
     QDir alternativeDir = pluginsDir;
 
 #if defined(Q_OS_WIN)
diff --git a/MLScripting/main.cpp b/MLScripting/main.cpp
index 3e2523d..3f2863f 100644
--- a/MLScripting/main.cpp
+++ b/MLScripting/main.cpp
@@ -144,7 +144,7 @@ int main(int argc, char *argv[])
 void LoadPlugins()
 {
     //qDebug() << "Importing plugins";
-    QDir pluginsDir = QDir(qApp->applicationDirPath());
+    QDir pluginsDir = QDir("/usr/lib/mldemos");
     QDir alternativeDir = pluginsDir;
 
 #if defined(Q_OS_WIN)
